<h2>Увійти в акаунт</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card">
    <div class="card-body">
      <div class="field form-group">
        <% f.label :email %><br />
        <%= f.email_field :email, class:"form-control", placeholder:"example@gmail.com", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control", placeholder:"abc123", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Увійти", class:"btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
